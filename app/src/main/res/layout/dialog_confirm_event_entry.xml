<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/backgroundLight"
    style="@style/Card">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eventPumpActions">

        <TextView
            android:id="@+id/eventsPumpTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/event_pump_events"
            style="@style/TitlePrimaryDark"/>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/eventsPump"
            android:layout_below="@id/eventsPumpTitle"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eventEvents">

        <TextView
            android:id="@+id/eventsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/event_pump_events"
            style="@style/TitlePrimaryDark"/>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/events"
            android:layout_below="@id/eventsTitle"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/eventCancel"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="@android:string/cancel"/>
        <Button
            android:id="@+id/eventSave"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@android:string/ok"
            android:layout_toStartOf="@id/sysPrefCancel"/>

    </RelativeLayout>

</LinearLayout>