<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Titles -->
    <style name="PrimaryText">
        <item name="android:textColor">@color/colorTextLight</item>
        <item name="android:textSize">24sp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>
    <style name="Subtitle">
        <item name="android:textColor">@color/colorTextLight</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>
    <style name="Subtext">
        <item name="android:textColor">@color/colorTextLight</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>
    <style name="SubtextTitle">
        <item name="android:textColor">@color/colorSubText</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <!-- Cards -->
    <style name="Card" parent="CardView">
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="cardBackgroundColor">@color/colorPrimaryDark</item>
    </style>
    <style name="CardActions">
        <item name="android:padding">8dp</item>
        <item name="android:background">@color/colorTextLight</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>
    <style name="CardImageAction">
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/ic_menu_gallery</item>
        <item name="android:backgroundTint">@color/colorButton</item>
    </style>

</resources>
